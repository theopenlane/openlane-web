---
interface Props {
  href: string;
  class?: string; // override or add classes
}

const { href, class: className = "" } = Astro.props;
---

<a
  href={href}
  class={`h-10 hidden lg:inline-flex items-center justify-center
          font-sans font-medium text-base leading-6 tracking-normal
          bg-[#9AF5DC]
          rounded-lg shadow
          border border-transparent
          transition-all duration-300
          hover:bg-[linear-gradient(0deg,#9AF5DC,#9AF5DC),linear-gradient(0deg,rgba(255,255,255,0.44),rgba(255,255,255,0.44))]
          hover:border-[#09151D1F]
          ${className}`}
>
  <slot />
</a>
