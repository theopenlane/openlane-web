---
import OpenLaneDark from "../../components/icons/OpenLaneDark.astro";
import OpenLaneLight from "../../components/icons/OpenLaneLight.astro";
---

<section class="py-20 px-2 sm:px-6 text-center">
  <div class="mx-auto max-w-[668px]">
    <p
      class="sm:text-5xl md:text-4xl leading-10 letter-spacing-[-0.9px] font-normal text-gradient text-color"
