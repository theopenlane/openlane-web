---
import { Bot, ChevronRight, Combine, Instagram, Linkedin } from "@lucide/astro";
import GithubIcon from "../../components/icons/GithubIcon.astro";
import DiscordIcon from "../../components/icons/DiscordIcon.astro";
import ContactForm from "./ContactForm.tsx";
---

<section class="py-20 px-2 sm:px-6 text-center">
  <div class="mx-auto max-w-7xl text-left">
    <p
      class="text-5xl sm:text-5xl md:text-6xl pl-0 md:pl-6 leading-10 font-normal text-color leading-[100%]"
    >
      <span class="text-gradient"> Contact</span>
    </p>
  </div>
</section>

<section
  class="py-20 px-2 sm:px-6 text-left bg-slate-50 rounded-t-[60px] rounded-b-none border-t border-color box-shadow"
>
  <div
    class="max-w-7xl pl-0 md:pl-6 mx-auto grid grid-cols-1 lg:grid-cols-12 gap-12 items-stretch mt-10"
  >
    <div class="lg:col-span-6 h-full flex flex-col">
      <p
        class="font-medium text-3xl leading-9 tracking-[-0.75px] mb-2 text-color"
      >
        We'd love to hear from you
      </p>
      <p
        class="text-lg font-normal leading-7 mb-6 tracking-[-0.6px] text-color"
      >
        We are open for your thoughts, criticism, lorem, ipsum. You may reach us
        at <a href="mailto:info@theopenlane.io" class="color-icon-primary"
          >info@theopenlane.io</a
        > or you may use the form below
      </p>
      <ContactForm />
    </div>

    <div class="lg:col-span-6 h-full flex flex-col">
      <p
        class="font-medium text-3xl leading-9 tracking-[-0.75px] mb-2 text-color"
      >
        Participate, Contribute
      </p>
      <p
        class="text-lg font-normal leading-7 mb-6 tracking-[-0.6px] text-color"
      >
        Breve black rich aroma wings redeye crema milk press coffee panna black.
        Froth origin flavour strong et cortado lungo robusta galão french
        affogato sit redeye pumpkin trifecta.
      </p>

      <div class="flex flex-col sm:flex-row  md:max-w-full gap-4">
        <button
            class="px-4 py-2 border-2 rounded-full border-brand-400 flex items-center gap-2 font-medium text-base"
        >
          <GithubIcon class="w-4 h-4 text-color" />
          <span class="text-color text-sm">View our codes at GitHub</span>
        </button>
        <button
            class="px-4 py-2 border-2 rounded-full border-brand-400 flex items-center gap-2 font-medium text-base"
        >
          <GithubIcon class="w-4 h-4 text-color" />
          <span class="text-color text-sm">Open an issue on our project</span>
        </button>
      </div>


      <p
        class="font-medium text-3xl leading-9 tracking-[-0.75px] mb-2 mt-8 text-color"
      >
        We’re everywhere
      </p>

      <ul class="flex flex-col gap-2 text-sm">
        <li>
          <a
            class="flex items-center gap-2 mb-2"
            target="_blank"
            href="https://www.instagram.com/openlanesaas/"
          >
            <Instagram size={19} class="text-color" />
            Instagram
          </a>
        </li>
        <li>
          <a
            class="flex items-center gap-2 mb-2"
            target="_blank"
            href="https://discord.gg/4fq2sxDk7D"
          >
            <DiscordIcon />
            Discord
          </a>
        </li>
        <li>
          <a
            class="flex items-center gap-2 mb-2"
            target="_blank"
            href="https://www.linkedin.com/company/theopenlane/"
          >
            <Linkedin size={19} class="text-color" />
            LinkedIn
          </a>
        </li>
        <li>
          <a
            class="flex items-center gap-2"
            target="_blank"
            href="https://github.com/theopenlane"
          >
            <GithubIcon />
            GitHub
          </a>
        </li>
      </ul>
    </div>
  </div>
</section>
