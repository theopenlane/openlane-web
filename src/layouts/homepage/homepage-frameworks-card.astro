---
type Info = {
  background: string;
  icon?: string;
};

interface Props {
  data: Info;
}

const { data } = Astro.props as { data?: Info };
---

{
  data && (
    <div
      class={`w-full rounded-[24px] h-[176px]
             shadow-[0_0_0_1px_rgba(9,21,29,0.08),0_14px_4px_0_rgba(9,21,29,0),0_9px_4px_0_rgba(9,21,29,0.01),0_5px_3px_0_rgba(9,21,29,0.02),0_2px_2px_0_rgba(9,21,29,0.03),0_1px_1px_0_rgba(9,21,29,0.04)]
             flex items-center justify-center
             p-[32px] ${data.background}`}
    >
      {data.icon && (
        <img src={data.icon} class="w-24 h-24 object-contain" alt="" />
      )}
    </div>
  )
}
