---
import PartnersSlider from "./PartnersSlider.tsx";
import NewTag from "../../components/icons/NewTag.astro";
import { ChevronRight } from "lucide-react";
import PolygonPartner from "../../components/assets/PolygonPartner.astro";
import PolygonSmall from "../../components/assets/PolygonSmall.astro";
import LineSpace from "../../components/assets/LineSpace.astro";
---

<section class="bg-color-secondary py-5 px-2 md:px-22 text-center">
  <div class="mx-auto max-w-[1290px] text-left">
    <!--<PartnersSlider client:load />-->

    <div
      class="relative overflow-hidden rounded-xl flex flex-col md:flex-row items-start md:items-center justify-between p-4 bg-partner mt-10 space-y-4 md:space-y-0"
    >
      <div
        class="absolute left-[-221px] top-[-347px] top-0 z-0 pointer-events-none hidden lg:block"
      >
        <PolygonPartner class="w-full h-auto" />
      </div>
      <div
        class="absolute right-[160px] top-[-8px] z-0 pointer-events-none hidden lg:block"
      >
        <PolygonSmall class="w-full h-auto" />
      </div>
      <div
        class="absolute right-[216px] top-[20px] z-0 pointer-events-none hidden lg:block"
      >
        <PolygonSmall class="w-full h-auto" />
      </div>
      <div
        class="absolute right-[220px] top-[36px] z-10 pointer-events-none hidden lg:block"
      >
        <LineSpace class="w-full h-auto" />
      </div>
      <div
        class="flex flex-col md:flex-row md:items-center md:space-x-2 z-20 fade-in-scroll"
      >
        <span
          class="text-xs font-semibold border border-accent rounded-md p-1 max-w-[32px]"
        >
          <NewTag />
        </span>
        <p class="text-2xl font-normal mt-2 md:mt-0 z-20">
          Openlane welcomes partnerships with open arms, naturally.
        </p>
      </div>

      <a
        href="/company/contact"
        data-astro-reload
        class="px-6 py-2 text-invert-primary bg-accent rounded-full flex items-center gap-2 font-medium text-base hover:bg-accent-300 !transition-colors !duration-300 cursor-pointer z-10 fade-in-scroll"
      >
        <span>Become our Partner</span>
        <ChevronRight className="w-4 h-4" />
      </a>
    </div>
  </div>
</section>
