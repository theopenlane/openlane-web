---
import { Bot, Framer } from "@lucide/astro";
---

<section class="pb-20 pt-10 px-2 sm:px-6 text-center">
  <div class="mx-auto max-w-[668px]">
    <div class="mt-6 mb-10 flex justify-center gap-4">
      <div class="flex justify-center asset-bg p-1 rounded-lg fade-in-scroll">
        <img
          src="/assets/standards/PCI.svg"
          alt="PCI DSS Logo"
          class="max-h-full max-w-full object-contain !rounded-none"
        />
      </div>
    </div>
  </div>
  <p
    class="text-5xl md:text-6xl leading-10 font-normal text-gradient text-color leading-[100%] fade-in-scroll"
  >
    PCI DSS Framework
  </p>
</section>
