---
import { BookText, Github, LifeBuoy, MessageCircleCode } from "lucide-react";
import TitleSectionCard from "./TitleSectionCard.astro";
---

<section
  class="pb-20 pt-10 px-4 sm:px-6 md:px-8 lg:px-10 text-center text-text mx-auto max-w-[1291px]"
>
  <div class="flex flex-col gap-4 fade-in-scroll">
    <span class="text-6xl pt-2 md:text-6xl leading-none font-normal">
      Weâ€™re here for you</span
    >
    <div class="flex items-center pb-20 justify-center">
      <p class="text-2xl leading-8 text-text font-normal">
        No firewalls between you and support here. Just real <br /> humans ready
        to help, fast.
      </p>
    </div>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5 justify-center mt-8"
    >
      <TitleSectionCard
        Icon={BookText}
        title="Documentation"
        text="Feeling adventurous? Check out our Docs for answers."
        linkText="Read docs"
        href="https://docs.theopenlane.io/"
      />
      <TitleSectionCard
        Icon={Github}
        title="GitHub"
        text="Open issue on GitHub (publicly trackable)"
        linkText="Open issue on GH"
        href="https://github.com/theopenlane"
      />
      <TitleSectionCard
        Icon={MessageCircleCode}
        title="Community"
        text="We have channel for open discussion at Discord."
        linkText="Join the conversation"
        href="https://discord.com/invite/4fq2sxDk7D"
      />
      <TitleSectionCard
        Icon={LifeBuoy}
        title="Open a ticket"
        text="Send your questions, suggestions, or anything"
        linkText="Support Portal"
        href="https://support.devrev.ai/openlane/directories"
      />
    </div>
  </div>
</section>
