<TrustCenterSection showHeroDots>
  <div class="mx-auto max-w-[668px] mb-20">
    <h1
      class="text-[#09151D] text-center text-[56px] font-medium leading-[64px] tracking-[-1.12px]"
    >
      Give customers a clear view of your security
    </h1>

    <div class="mt-6 flex justify-center gap-4">
      <p
        class="text-[#6B7682] text-center text-[20px] font-normal leading-[30px] fade-in-scroll"
      >
        The Trust Center shows your security posture from live controls and
        policies, ensuring accuracy.
      </p>
    </div>
  </div>
</TrustCenterSection>
<TrustCenterSection>
  <div class="grid md:grid-cols-2 gap-4">
    {standardsCardData.map((card) => <TrustCenterStandardsCard data={card} />)}
  </div>
</TrustCenterSection>

<TrustCenterSection showHeroDots>
  <div class="mx-auto max-w-[668px] mb-20">
    <h1
      class="text-[#09151D] text-center text-[56px] font-medium leading-[64px] tracking-[-1.12px]"
    >
      What defines the Openlane Trust Center
