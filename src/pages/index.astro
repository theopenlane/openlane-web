---
import BaseLayout from "../layouts/BaseLayout.astro";
import { mainURL, brandLogo, sameAs } from "../consts";
import HomepageLayout from "../layouts/homepage/Homepage.astro";

const schema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Openlane",
  url: mainURL,
  logo: brandLogo,
  sameAs: sameAs,
};
---

<BaseLayout schema={schema}>
  <HomepageLayout />
  <Fragment slot="scripts">
    <script
      defer
      src="https://api.pirsch.io/pa.js"
      id="pianjs"
      data-code={import.meta.env.PIRSCH_KEY}></script>

    <script
      type="text/javascript"
      src="https://embeds.iubenda.com/widgets/9ba44ba0-7541-4484-ac5d-2e5e09003ca6.js"
    ></script>
  </Fragment>
</BaseLayout>
