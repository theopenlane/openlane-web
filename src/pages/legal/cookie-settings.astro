---
import BaseLayout from "../../layouts/BaseLayout.astro";
import CookieSettings from "../../layouts/legal/CookieSettings.astro";
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
import { execSync } from "child_process";
import Navigation from "../../components/Navigation.astro";

dayjs.extend(utc);

// Get last modified date from git for the component file
const lastCommitDate = execSync(
  "git log -1 --format=%cd --date=short -- src/layouts/legal/CookieSettings.astro",
  { encoding: "utf-8" },
).trim();

const lastModified = dayjs(lastCommitDate).format("MMMM D, YYYY");
---

<BaseLayout title="Cookie Settings">
  <Navigation
    parentNav="Legal"
    childNav="Cookie Settings"
    parentLink="/legal"
  />
  <CookieSettings lastUpdated={lastModified} />
</BaseLayout>
