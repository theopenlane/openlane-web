---
import BaseLayout from "../../layouts/BaseLayout.astro";
import DPA from "../../layouts/legal/DPA";
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
import { execSync } from "child_process";

dayjs.extend(utc);

// Get last modified date from git for the DPA component file
const lastCommitDate = execSync(
  "git log -1 --format=%cd --date=short -- src/layouts/legal/DPA.tsx",
  { encoding: "utf-8" },
).trim();

const lastModified = dayjs(lastCommitDate).format("MMMM D, YYYY");
---

<BaseLayout title="Data Processing Addendum - OpenLane">
  <DPA client:load lastUpdated={lastModified} />
</BaseLayout>
