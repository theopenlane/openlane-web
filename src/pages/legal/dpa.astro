---
import BaseLayout from "../../layouts/BaseLayout.astro";
import DPA from "../../layouts/legal/DPA.astro";
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
import { execSync } from "child_process";
import Navigation from "../../components/Navigation.astro";

dayjs.extend(utc);

// Get last modified date from git for the DPA component file
const lastCommitDate = execSync(
  "git log -1 --format=%cd --date=short -- src/layouts/legal/DPA.astro",
  { encoding: "utf-8" },
).trim();

const lastModified = dayjs(lastCommitDate).format("MMMM D, YYYY");
---

<BaseLayout title="Data Processing Addendum">
  <Navigation parentNav="Legal" childNav="DPA" parentLink="/legal" />
  <DPA lastUpdated={lastModified} />
</BaseLayout>
