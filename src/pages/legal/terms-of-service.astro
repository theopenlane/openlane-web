---
import BaseLayout from "../../layouts/BaseLayout.astro";
import TermsOfService from "../../layouts/legal/TermsOfService";
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
import { execSync } from "child_process";

dayjs.extend(utc);

// Get last modified date from git for the component file
const lastCommitDate = execSync(
  "git log -1 --format=%cd --date=short -- src/layouts/legal/TermsOfService.tsx",
  { encoding: "utf-8" },
).trim();

const lastModified = dayjs(lastCommitDate).format("MMMM D, YYYY");
---

<BaseLayout title="Terms of Service - OpenLane">
  <TermsOfService client:load lastUpdated={lastModified} />
</BaseLayout>
