---
// filepath: /Users/sarahfunkhouser/go/src/github.com/theopenlane/openlane-web/src/pages/compare/openlane-vs-drata.astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navigation from "../../components/Navigation.astro";
import Migration from "../../layouts/alternatives/migration.astro";

const comparisonData = {
  openlane: {
    name: "Openlane",
    tagline: "Open-source compliance automation",
    features: [
      { name: "Multi-Framework Support", value: true },
      { name: "Custom Frameworks", value: true },
      { name: "Evidence Automation", value: true },
      { name: "Starting Price", value: "Free (self-hosted)" },
      { name: "Cloud Pricing", value: "$499/month" },
      { name: "Per-User Fees", value: false },
      { name: "Transparent Pricing", value: true },
      { name: "Open Source", value: true },
      { name: "Self-Hosted Option", value: true },
      { name: "No Vendor Lock-in", value: true },
      { name: "Full Data Control", value: true },
      { name: "API Access", value: "Unlimited" },
    ],
  },
  drata: {
    name: "Drata",
    tagline: "Proprietary compliance platform",
    features: [
      { name: "Multi-Framework Support", value: "Add-on" },
      { name: "Custom Frameworks", value: false },
      { name: "Evidence Automation", value: true },
      { name: "Starting Price", value: "~$20,000/year" },
      { name: "Cloud Pricing", value: "Contact sales" },
      { name: "Per-User Fees", value: true },
      { name: "Transparent Pricing", value: false },
      { name: "Open Source", value: false },
      { name: "Self-Hosted Option", value: false },
      { name: "No Vendor Lock-in", value: false },
      { name: "Full Data Control", value: false },
      { name: "API Access", value: "Limited" },
    ],
  },
};
---

<BaseLayout>
  <Navigation />

  <!-- Hero Section -->
  <section class="pb-20 pt-10 px-2 sm:px-6 text-center">
    <div class="mx-auto max-w-[668px]">
      <p
        class="text-5xl md:text-6xl leading-10 font-normal text-gradient text-color leading-[100%] fade-in-scroll"
      >
        Openlane vs Drata
      </p>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto mt-6">
        Compare open-source compliance automation with transparency and
        flexibility against traditional proprietary platforms
      </p>
    </div>
  </section>

  <!-- Comparison Table -->
  <section class="pb-20 px-4 sm:px-6">
    <div class="mx-auto max-w-6xl">
      <div class="bg-card rounded-lg border border-border overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-color-secondary">
              <tr>
                <th class="px-6 py-4 text-left text-sm font-semibold text-text"
                  >Feature</th
                >
                <th
                  class="px-6 py-4 text-center text-sm font-semibold text-primary"
                  >{comparisonData.openlane.name}</th
                >
                <th
                  class="px-6 py-4 text-center text-sm font-semibold text-gray-600"
                  >{comparisonData.drata.name}</th
                >
              </tr>
            </thead>
            <tbody class="divide-y divide-border">
              {
                comparisonData.openlane.features.map((feature, index) => (
                  <tr class="hover:bg-card-hover transition-colors">
                    <td class="px-6 py-4 text-sm font-medium text-text">
                      {feature.name}
                    </td>
                    <td class="px-6 py-4 text-center">
                      {typeof feature.value === "boolean" ? (
                        feature.value ? (
                          <svg
                            class="w-5 h-5 text-primary mx-auto"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M5 13l4 4L19 7"
                            />
                          </svg>
                        ) : (
                          <svg
                            class="w-5 h-5 text-gray-400 mx-auto"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M6 18L18 6M6 6l12 12"
                            />
                          </svg>
                        )
                      ) : (
                        <span class="text-sm text-text">{feature.value}</span>
                      )}
                    </td>
                    <td class="px-6 py-4 text-center">
                      {typeof comparisonData.drata.features[index].value ===
                      "boolean" ? (
                        comparisonData.drata.features[index].value ? (
                          <svg
                            class="w-5 h-5 text-primary mx-auto"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M5 13l4 4L19 7"
                            />
                          </svg>
                        ) : (
                          <svg
                            class="w-5 h-5 text-gray-400 mx-auto"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M6 18L18 6M6 6l12 12"
                            />
                          </svg>
                        )
                      ) : (
                        <span class="text-sm text-gray-600">
                          {comparisonData.drata.features[index].value}
                        </span>
                      )}
                    </td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Differences -->
  <section class="pb-20 px-4 sm:px-6 bg-color-secondary">
    <div class="mx-auto max-w-6xl py-16">
      <h2 class="text-3xl font-bold text-text mb-12 text-center">
        Key Differences
      </h2>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Open Source -->
        <div class="bg-card p-8 rounded-lg border border-border">
          <div
            class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            </svg>
          </div>
          <h4 class="text-xl font-semibold text-text mb-3">
            Open Source vs Proprietary
          </h4>
          <p class="text-gray-600 mb-4">
            Openlane is fully open source, giving you complete visibility into
            how the platform works, the ability to self-host, and freedom from
            vendor lock-in. Drata is a closed, proprietary system with no
            visibility into its inner workings.
          </p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-start">
              <span class="text-primary mr-2">✓</span>
              <span>Full source code access</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary mr-2">✓</span>
              <span>Community contributions</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary mr-2">✓</span>
              <span>No vendor dependency</span>
            </li>
          </ul>
        </div>

        <!-- Pricing -->
        <div class="bg-card p-8 rounded-lg border border-border">
          <div
            class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
              ></path>
            </svg>
          </div>
          <h4 class="text-xl font-semibold text-text mb-3">
            Transparent vs Hidden Pricing
          </h4>
          <p class="text-gray-600 mb-4">
            Openlane offers transparent modular pricing, pay for what you need
            and know the cost before you buy. Drata requires sales calls with
            pricing typically starting around $20,000/year plus per-framework
            fees.
          </p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-start">
              <span class="text-primary mr-2">✓</span>
              <span>No sales calls required</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary mr-2">✓</span>
              <span>No per-user fees</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary mr-2">✓</span>
              <span>Predictable costs</span>
            </li>
          </ul>
        </div>

        <!-- Framework Support -->
        <div class="bg-card p-8 rounded-lg border border-border">
          <div
            class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
          </div>
          <h4 class="text-xl font-semibold text-text mb-3">
            Comprehensive Framework Coverage
          </h4>
          <p class="text-gray-600 mb-4">
            Openlane supports all major frameworks including SOC2, ISO27001,
            NIST 800-53, 800-171, CSF, PCI DSS, and unlimited custom frameworks
            and doesn't charge extra for each additional framework.
          </p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-start">
              <span class="text-primary mr-2">✓</span>
              <span>Federal compliance (NIST, FedRAMP)</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary mr-2">✓</span>
              <span>Payment security (PCI DSS)</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary mr-2">✓</span>
              <span>Custom framework import</span>
            </li>
          </ul>
        </div>

        <!-- Data Control -->
        <div class="bg-card p-8 rounded-lg border border-border">
          <div
            class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
              ></path>
            </svg>
          </div>
          <h4 class="text-xl font-semibold text-text mb-3">
            Data Sovereignty & Control
          </h4>
          <p class="text-gray-600 mb-4">
            With Openlane's flexibility you maintain complete control over your
            compliance data and where it's stored. Drata requires all data to
            reside in their cloud infrastructure, creating potential concerns
            for regulated industries.
          </p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-start">
              <span class="text-primary mr-2">✓</span>
              <span>Self-hosted deployment</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary mr-2">✓</span>
              <span>Data residency control</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary mr-2">✓</span>
              <span>Air-gapped environments</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  <Migration />
</BaseLayout>
