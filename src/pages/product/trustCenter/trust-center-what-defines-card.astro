---
type Info = {
  title: string;
  description: string;
  imageSrc: string;
};

interface Props {
  data: Info;
}

const { data } = Astro.props as { data?: Info };
---

{
  data && (
    <div class="flex flex-col items-center gap-6 bg-white fade-in-scroll visible border border-dashed border-[#E1E3E4] p-6">
      <div class="flex items-center gap-1 p-3 rounded-[10px]">
        <img
          src={data.imageSrc}
          alt="Trust Center Standards"
          class="h-6 w-auto mr-0"
        />
      </div>
      <div class="flex flex-col gap-3">
        <p class="text-[#09151D] text-center text-[18px] font-medium leading-[28px]">
          {data.title}
        </p>
        <p class="text-[#6B7682]! text-center text-[16px] font-normal leading-[24px]">
          {data.description}
        </p>
      </div>
    </div>
  )
}
