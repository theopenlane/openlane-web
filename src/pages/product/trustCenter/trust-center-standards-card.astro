---
type Info = {
  title: string;
  description: string;
  bullets?: string[];
};

interface Props {
  data: Info;
}

const { data } = Astro.props;
---

<div class="rounded-xl shadow p-6 bg-white fade-in-scroll visible">
  <div class="rounded-xl shadow-[0_12px_20px_-12px_rgba(0,0,0,0.25)] mb-6">
    <img
      src="/assets/trust-center/trust-center-standards-1.svg"
      alt="Trust Center Standards"
      class="h-6 w-auto mr-0"
    />
  </div>
  <div class="flex flex-col gap-3">
    <p class="text-2xl font-medium tracking-[-0.6px] mb-2">
      {data.title}
    </p>
    <p class="font-normal leading-7">
      {data.description}
    </p>
    <ul class="space-y-2 text-sm text-slate-600">
      {
        data.bullets?.map((item) => {
          return <li>{item}</li>;
        })
      }
    </ul>
  </div>
</div>
