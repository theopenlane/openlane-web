---
import TitleSection from "../../layouts/policy-and-procedure-management/TitleSection.astro";
import DescriptionSection from "../../layouts/policy-and-procedure-management/DescriptionSection.astro";
import Navigation from "../../components/Navigation.astro";
import PlaygroundSection from "../../layouts/policy-and-procedure-management/PlaygroundSection";
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout>
  <Navigation parentNav="Product" childNav="Policy & Procedure Management" />

  <TitleSection />
  <DescriptionSection />
  <PlaygroundSection client:load />
</BaseLayout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  document.addEventListener("astro:page-load", () => {
    if (window.innerWidth < 768) {
      return;
    }

    gsap.registerPlugin(ScrollTrigger);

    const elements = document.querySelectorAll(
      "[data-gsap-compliance-policy-and-procedures]",
    );
    gsap.set(elements, { opacity: 0, y: 30 });

    gsap
      .timeline({ defaults: { duration: 0.8, ease: "power2.out" } })
      .to(elements, {
        opacity: 1,
        y: 0,
        stagger: 0.15,
      });
  });
</script>
