---
import TitleSection from "../../../layouts/frameworks/common/TitleSection.astro";
import FaqSection from "../../../layouts/frameworks/hipaa/FaqSection.astro";
import DetailsSection from "../../../layouts/frameworks/hipaa/DetailsSection.astro";
import Navigation from "../../../components/Navigation.astro";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { creator, isPartOf } from "../../../consts";

const schema = {
  "@context": "https://schema.org",
  "@type": "DefinedTerm",
  name: "HIPAA Compliance Framework",
  termCode: "HIPAA",
  description:
    "The HIPAA compliance framework provides administrative, technical, and physical safeguards for protecting Protected Health Information (PHI) and ensuring healthcare data security.",
  url: "https://www.theopenlane.io/product/frameworks/hipaa",

  // This ties HIPAA into the larger Openlane framework library
  inDefinedTermSet: {
    "@type": "DefinedTermSet",
    name: "Security and Compliance Frameworks",
    url: "https://www.theopenlane.io/product/frameworks",
  },

  about: [
    { "@type": "Thing", name: "HIPAA" },
    { "@type": "Thing", name: "PHI Protection" },
    { "@type": "Thing", name: "Healthcare Security" },
    { "@type": "Thing", name: "Business Associate Agreement" },
  ],

  creator: creator,
  isPartOf: isPartOf,
};
---

<BaseLayout
  title="HIPAA Compliance | Openlane"
  description="Open-source HIPAA compliance platform for protecting Protected Health Information (PHI) and healthcare data security."
  keywords="HIPAA, HIPAA compliance, PHI protection, Protected Health Information, healthcare security, HIPAA Security Rule, HIPAA Privacy Rule, BAA, Business Associate Agreement, healthcare compliance, open source compliance"
  canonicalUrl="https://www.theopenlane.io/product/frameworks/hipaa"
  schema={schema}
>
  <Navigation
    parentNav="Frameworks"
    childNav="HIPAA"
    parentLink="/product/frameworks"
  />
  <TitleSection
    title="HIPAA Framework"
    image="/assets/standards/hipaa.svg"
    alt="hipaa icon"
  />
  <DetailsSection />
  <FaqSection />
</BaseLayout>
